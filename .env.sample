# Server
PORT=4000
SESSION_SECRET=session-secret
SESSION_COOKIE_NAME=rp_session
CSRF_COOKIE_NAME=rp_csrf
# Host port uses 5433 to avoid conflicts with local Postgres defaults
DATABASE_URL=postgres://postgres:postgres@localhost:5433/rapid_prototype
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5433/rapid_prototype_test
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Admin bootstrap (used by seed script only)
ADMIN_EMAIL=admin-email
ADMIN_PASSWORD=change-admin-password

# OpenAI / Codex Cloud
OPENAI_API_KEY=openai-sdk-key
CODEX_ORG=your-org
CODEX_SYSTEM_PROMPT=You are an expert React engineer; output the full component.
CODEX_WORKER_POLL_MS=5000
CODEX_WORKER_BATCH_SIZE=2

# GitHub integration (future iterations)
GITHUB_TOKEN=your-gh-token
GITHUB_REPO=owner/repo
GITHUB_BASE_BRANCH=main
GIT_AUTHOR_NAME=Rapid Prototyper
GIT_AUTHOR_EMAIL=rp@example.com

# UI
VITE_API_BASE_URL=http://localhost:4000
